header.header
  .header-column
  a(href=routes.home)
    i.fab.fa-youtube
  .header-column
    form(method="get", action=routes.search)
      input(type="text", name="term" placeholder="search by term...")
  .header-column
    ul
      if !user.isAuthenticated
        li
          a(href=routes.join) Join
        li
          a(href=routes.login) Login
      else 
        li
          a(href=`/videos${routes.upload}`) Upload
        li
          a(href=routes.userDetail(user.id)) Profile
        li
          a(href=routes.logout) Logout
